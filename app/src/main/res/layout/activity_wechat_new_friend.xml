<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/base_wechat_status_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimary">


        <com.nanningzhuanqian.vscreenshot.widget.ArrowView
            android:id="@+id/arrow"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            app:arrowColor="@color/white"
            app:arrowDirection="left"
            app:arrowWidth="1dp" />

        <TextView
            android:id="@+id/tvToolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/arrow"
            android:gravity="center"
            android:text="新的朋友"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnOption"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:background="?attr/selectableItemBackground"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="新的朋友"
            android:textColor="@color/white" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/llAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:background="@color/tab_layout_top_divider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:gravity="bottom"
                    android:layout_marginTop="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@mipmap/app_views_pages_wechat_home_components_images_asearchicon" />

                    <TextView
                        android:layout_marginLeft="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="微信号/QQ号/手机号"
                        android:textColor="@color/gray"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@color/tab_layout_top_divider" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:layout_marginTop="12dp"
                    android:background="@color/tab_layout_top_divider" />
            </LinearLayout>
            <TextView
                android:id="@+id/tvDescription"
                android:textColor="@color/gray"
                android:textSize="11sp"
                android:text="新的朋友"
                android:paddingLeft="12dp"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:background="@color/tab_layout_top_divider" />
            <com.nanningzhuanqian.vscreenshot.widget.CustomListview
                android:id="@+id/lvNewFriend"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></com.nanningzhuanqian.vscreenshot.widget.CustomListview>
        </LinearLayout>
    </ScrollView>

</LinearLayout>