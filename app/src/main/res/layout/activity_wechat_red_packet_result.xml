<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wechat_gray_like_red_packet"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/ajj" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/statusBar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/transparent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">


            <com.nanningzhuanqian.vscreenshot.widget.ArrowView
                android:id="@+id/arrowBack"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                app:arrowColor="@color/wechat_red_packet_gold"
                app:arrowDirection="left"
                app:arrowWidth="2dp" />

            <TextView
                android:id="@+id/tvToolbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@id/arrowBack"
                android:gravity="center"
                android:text="发红包"
                android:textColor="@color/wechat_red_packet_gold"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <include layout="@layout/wechat_red_packet_right" />

                <ImageButton
                    android:id="@+id/btnRight"
                    android:layout_width="66dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackground" />
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imgAvatar"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="112dp"
        android:src="@mipmap/app_images_role_10001"
        app:riv_border_color="@color/wechat_red_packet_avatar_stroke_gold"
        app:riv_border_width="3dp"
        app:riv_corner_radius="8dp" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgAvatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="吴MoonMoon"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvMark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvName"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:text="恭喜发财，大吉大利" />

    <ImageView
        android:layout_marginTop="24dp"
        android:id="@+id/grayBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvMark"
        android:scaleType="fitXY"
        android:src="@mipmap/wechat_redpacket_gray_bottom" />
    <LinearLayout
        android:layout_below="@id/grayBottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/tvDescription"
            android:textSize="14sp"
            android:text="该红包已过期。已领取0/1个，共0.00/17.00元"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="15sp"
            android:layout_marginTop="32dp"
            android:text="未领取的红包过期后会退回零钱"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>