<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/common_margin_two_side"
        android:paddingRight="@dimen/common_margin_two_side">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/black2" />
        <TextView
            android:id="@+id/tvSelected"
            android:textSize="16dp"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginRight="8dp"
            android:text="@string/region_selected"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/app_views_pages_wechat_common_images_transbottomnavright" />
    </LinearLayout>
    <View android:layout_height="0.1dp"
        android:layout_width="32dp"
        android:background="@color/gray"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>
</RelativeLayout>