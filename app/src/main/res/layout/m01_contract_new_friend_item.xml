<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvInitial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="3dp"
        android:paddingLeft="16dp"
        android:paddingTop="3dp"
        android:text="新的朋友"
        android:textSize="12sp"
        android:textColor="@color/gray"
        android:visibility="visible" />
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="32dp"
        android:background="@color/tab_layout_top_divider" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_marginLeft="8dp"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@mipmap/app_images_role_10000" />

        <ImageView
            android:id="@+id/imgAvatar1"
            android:layout_marginLeft="16dp"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@mipmap/app_images_role_10000" />
        <ImageView
            android:id="@+id/imgAvatar2"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="16dp"
            android:src="@mipmap/app_images_role_10000" />
        <ImageView
            android:id="@+id/imgAvatar3"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="16dp"
            android:src="@mipmap/app_images_role_10000" />
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/unread_count"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@drawable/wechat_notice_badge_bg"
            android:gravity="center"
            android:minWidth="20dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_marginRight="40dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>